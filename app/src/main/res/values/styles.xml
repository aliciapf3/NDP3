<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">#EA3420</item>
    </style>

    <style name="Question">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/textSize20</item>
        <item name= "android:textStyle">bold</item>
        <item name ="android:layout_width">match_parent</item>
        <item name ="android:layout_height">wrap_content</item>
        <item name ="android:layout_marginRight">@dimen/marginRight18</item>
        <item name ="android:layout_marginLeft">@dimen/marginLeft18</item>
        <item name ="android:layout_marginTop">@dimen/marginTop24</item>
    </style>

    <style name="Answer">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/textSize16</item>
        <item name= "android:textStyle">bold</item>
        <item name="android:layout_width">@dimen/width230</item>
        <item name="android:layout_height">@dimen/height40</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="AnswerEdit">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">@dimen/width230</item>
        <item name="android:layout_height">@dimen/height40</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/marginTop24</item>
        <item name=" android:layout_marginBottom">@dimen/marginBottom48</item>
        <item name= "android:textStyle">bold</item>
    </style>

    <style name="Button">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/marginTop55</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom48</item>
        <item name="android:textSize">@dimen/textSize18</item>
    </style>

</resources>
